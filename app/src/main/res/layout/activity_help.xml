<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHelp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Здравствуй, дорогой друг, рада поприветствовать тебя на просторах изучения английского языка, а в частности его лексики. Данное приложение позволит тебе улучшить эффективность запоминания английских слов, а также поможет применить новые знания на практике. Чтобы в процессе обучения у тебя не возникало никаких сложностей, для тебя была подготовлена небольшая инструкция по использованию электронного словаря «Easy English». Далее ты сможешь ознакомиться с подробным описанием каждого экрана приложения и его функциями."
        android:textAlignment="textStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="15dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:weightSum="3"
        android:padding="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Главный экран"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:layout_weight="0.5"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:weightSum="3"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Паспорт слова"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:layout_weight="0.5"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout2"
        android:weightSum="3"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Экран выбора игр"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:layout_weight="0.5"
            />

    </LinearLayout>



</RelativeLayout>