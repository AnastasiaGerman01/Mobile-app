<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTheCorrectAnswer">


    <Button
        android:id="@+id/button_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@color/colorButton4"
        android:text="Button"
        android:fontFamily="@font/adamina"
        />

    <Button
        android:id="@+id/button_true_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_true"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorButton4"
        android:onClick="button_1"
        android:text="Button"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/button_true_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_true"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/button_true_1"
        android:background="@color/colorButton4"
        android:onClick="button_2"
        android:text="Button"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/button_true_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_true_1"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorButton4"
        android:onClick="button_3"
        android:text="Button" />

    <Button
        android:id="@+id/button_true_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_true_2"
        android:layout_toRightOf="@+id/button_true_3"
        android:background="@color/colorButton4"
        android:onClick="button_4"
        android:text="Button" />


</RelativeLayout>